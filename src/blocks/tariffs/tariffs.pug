//- Все примеси в этом файле должны начинаться c имени блока (tariffs)

mixin tariffs(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +tariffs('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' tariffs--' + modsList[i].trim();
      }
    }

  .tariffs(class=allMods)&attributes(attributes)
    .tariffs__inner!= text
