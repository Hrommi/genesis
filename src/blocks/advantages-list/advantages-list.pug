//- Все примеси в этом файле должны начинаться c имени блока (advantages-list)

mixin advantages-list(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +advantages-list('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' advantages-list--' + modsList[i].trim();
      }
    }

  .advantages-list(class=allMods)&attributes(attributes)
    .advantages-list__inner!= text
