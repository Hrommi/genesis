//- Все примеси в этом файле должны начинаться c имени блока (condition)

mixin condition(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +condition('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' condition--' + modsList[i].trim();
      }
    }

  .condition(class=allMods)&attributes(attributes)
    .condition__inner!= text
