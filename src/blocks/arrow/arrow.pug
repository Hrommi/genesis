//- Все примеси в этом файле должны начинаться c имени блока (arrow)

mixin arrow(label, mods)

  //- Принимает:
  //-   label {string} - описание, значение атрибута aria-label
  //-   mods {string}  - стилевые модификаторы
  //- Вызов:
        +arrow('Открыть/Закрыть')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' arrow--' + modsList[i].trim();
      }
    }

  button.arrow(class=allMods, aria-label=label)&attributes(attributes)
    span= label
